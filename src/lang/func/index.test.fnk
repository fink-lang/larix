{describe, it, expect, to_match_snapshot} = import '@fink/jest'

{parse_expr} = import '../..'


describe 'func: fn ...: ...', fn:
  it 'parses no arg: fn: foo', fn:
    expect
      parse_expr 'fn: foo'
      to_match_snapshot


  it 'parses single arg: fn foo: bar', fn:
    expect
      parse_expr 'fn foo: bar'
      to_match_snapshot


  it 'parses single line: fn foo, bar: foo', fn:
    expect
      parse_expr 'fn foo, bar: foo'
      to_match_snapshot


  it 'parses multi line: fn foo, bar=1: foo', fn:
    expect
      parse_expr '
        ---
        doc comment
        ---
        fn foo, bar=1:
          foo
          bar
          # trailing func comment
      '
      to_match_snapshot


  it 'parses multi line args', fn:
    expect
      parse_expr '
        fn
          foo
          bar=ni
        :
          foo + bar
      '
      to_match_snapshot
