{describe, it, eq, snapshot} = import '../../testing/jest'

{parse_expr} = import '../../'


describe:: 'arithmitic', fn:

  it:: 'parses single line: a + b * c', fn:
    parse_expr(`a + b * c`) eq snapshot


  it:: 'parses single line: a * b + c', fn:
    parse_expr(`a * b + c`) eq snapshot


  it:: 'parses single line: a % b / c', fn:
    parse_expr(`a % b / c`) eq snapshot


  it:: 'parses single line: a ^ b * c', fn:
    parse_expr(`a ^ b * c`) eq snapshot


  it:: 'parses single line: a * -b', fn:
    parse_expr(`a * -b`) eq snapshot


  it:: 'parses grouped: (a - b) * c', fn:
    parse_expr(`(a - b) * c`) eq snapshot

