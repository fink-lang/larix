{describe, it, expect, to_match_snapshot} = import '@fink/jest'

{parse_expr} = import '../../'


describe:: 'logical', fn:

  it:: 'parses &&', fn:
    expect::
      parse_expr:: `a && b`
      to_match_snapshot

    expect::
      parse_expr:: `a && b && c`
      to_match_snapshot

    expect::
      parse_expr:: `a && b || c`
      to_match_snapshot


  it:: 'parses ||', fn:
    expect::
      parse_expr:: `a || b`
      to_match_snapshot

    expect::
      parse_expr:: `a || b || c`
      to_match_snapshot

    expect::
      parse_expr:: `a || b && c`
      to_match_snapshot


  it:: 'parses !', fn:
    expect::
      parse_expr:: `!a`
      to_match_snapshot

