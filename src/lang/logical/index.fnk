{add_operator, add_non_separating} = import  '@fink/prattler/symbols'

{infix_right} = import  '../symbols'
{prefix} = import  '../symbols'


logical = fn op: infix_right:: op, 'logical'
prefix_logical = fn op: prefix:: op, 'logical'


add_logical_operators = fn ctx:
  pipe ctx:
    # TODO: deprecate?
    add_operator:: logical:: '||'
    add_operator:: logical:: '&&'
    add_operator:: prefix_logical:: '!'
