{add_operator} = import '@fink/prattler/symbols.fnk'
{next_is, curr_loc} = import '@fink/prattler/parser.fnk'

{prefix} = import '../symbols.fnk'
{single_expression} = import '../block/expr.fnk'



spread = fn op, type:
  dict:
    ...prefix op

    nud: fn lbp: fn ctx:
      {start} = curr_loc ctx

      [right, next_ctx] = match ctx:
        next_is ?, ',':
          [{}, ctx]
        else:
          [expr, next_ctx] = single_expression ctx, lbp
          [{right: expr}, next_ctx]

      {end} = curr_loc next_ctx

      [{type, op, ...right, loc: {start, end}}, next_ctx]



add_spread_operator = fn ctx:
  pipe ctx:
    add_operator spread '...', 'spread'
