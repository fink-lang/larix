{describe, it, eq, snapshot} = import '../../testing/jest'

{parse} = import '../../'


describe:: 'comments', fn:

  it:: 'parses line comments', fn:
    parse(`
      # leading expression
      # multi line
      spam = ni

      # single line
      shrub = ni

      foo = fn:
        shrub
        # trailing func

      ni
    `) eq snapshot


  it:: 'parses doc-comment', fn:
    parse(`
      ---
      foobar spam ham
      ---
      spam = ni
    `) eq snapshot

