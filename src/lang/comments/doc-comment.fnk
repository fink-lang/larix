{next_is, collect_text, expression} = import '@fink/prattler'

{symbol} = import '../symbols'


doc_comment = fn op:
  {
    ...symbol(op),

    nud: fn: fn ctx:
      [text, expr_ctx] = collect_text(ctx, op)
      comment = {op, ...text}
      [{comments, ...expr}, next_ctx] = expression(expr_ctx, 0)
      [{...expr, comments: {...comments, leading: [comment]}}, next_ctx]
  }
